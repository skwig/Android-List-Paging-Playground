<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ScrollingPagerIndicator">
        <item name="spi_dotColor">@android:color/darker_gray</item>
        <item name="spi_dotSelectedColor">@android:color/darker_gray</item>
        <item name="spi_dotSize">6dp</item>
        <item name="spi_dotSelectedSize">10dp</item>
        <item name="spi_dotSpacing">8dp</item>
        <item name="spi_visibleDotCount">5</item>
        <item name="spi_visibleDotThreshold">2</item>
        <item name="spi_looped">false</item>
    </style>
    <declare-styleable name="ScrollingPagerIndicator">
        <attr format="color" name="spi_dotColor"/>
        <attr format="color" name="spi_dotSelectedColor"/>
        <attr format="dimension" name="spi_dotSize"/>
        <attr format="dimension" name="spi_dotSelectedSize"/>
        <attr format="dimension" name="spi_dotMinimumSize"/>
        <attr format="dimension" name="spi_dotSpacing"/>
        <attr format="integer" name="spi_visibleDotCount"/>
        <attr format="integer" name="spi_visibleDotThreshold"/>
        <attr format="boolean" name="spi_looped"/>
    </declare-styleable>
</resources>