<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tab_container"
    android:layout_width="@dimen/tab_item_width"
    android:layout_height="80dp">
    <!--    tools:background="@color/tab_bg_color"-->
    <View
        android:id="@+id/tab_pill"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"

        android:background="@drawable/ic_backdrop"
        android:backgroundTint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JAN"
        app:layout_constraintBottom_toTopOf="@id/day"
        app:layout_constraintEnd_toEndOf="@id/tab_pill"
        app:layout_constraintStart_toStartOf="@id/tab_pill"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12"
        app:layout_constraintBottom_toBottomOf="@id/tab_pill"
        app:layout_constraintEnd_toEndOf="@id/tab_pill"
        app:layout_constraintStart_toStartOf="@id/tab_pill"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
         />


